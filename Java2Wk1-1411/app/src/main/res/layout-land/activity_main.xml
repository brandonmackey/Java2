<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="489dp"
        android:layout_height="wrap_content"
        android:id="@+id/etMovieSearch"
        android:hint="@string/editText1"
        android:textColorHint="#555"
        android:inputType="text" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="103dp"
        android:layout_height="36dp"
        android:text="@string/button2"
        android:id="@+id/btnSearch"
        android:layout_toEndOf="@+id/etMovieSearch"
        android:layout_toRightOf="@+id/etMovieSearch"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/etMovieSearch"
        android:layout_gravity="right|top" />

    <fragment
        android:layout_width="335dp"
        android:layout_height="242dp"
        android:layout_weight="1"
        android:name="com.java1wk4.bmackey.Java2WkOne1411.MovieDetailsFragment"
        android:id="@+id/movieDetailFragment_container"
        android:layout_toEndOf="@+id/listfragment_container"
        android:layout_below="@+id/btnSearch"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right|bottom"
        tools:layout="@layout/moviedetails" />

    <fragment
        android:layout_width="264dp"
        android:layout_height="241dp"
        android:layout_weight="1"
        android:name="com.java1wk4.bmackey.Java2WkOne1411.MovieTitleListFragment"
        android:id="@+id/MovieTitleListFragment_container"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/movieDetailFragment_container"
        tools:layout="@layout/list_fragment"
        android:layout_below="@+id/etMovieSearch"
        android:layout_gravity="left|bottom" />


